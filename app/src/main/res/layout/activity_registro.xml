<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="415dp"
        android:layout_height="79dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-2dp">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="219dp"
            android:layout_height="30dp"
            android:layout_gravity="center|top|left"
            android:layout_marginLeft="-45dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/banner" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center|clip_vertical"
            android:text="Ayuda"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="iniciar sesión"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="489dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:text="¿Te apetece ver series y películas sin límite?"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:text="Crea una cuenta y te envíaremos un correo con todo lo que necesiteas saber sobre Netflix."
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtEmailR"
            android:layout_width="321dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_boton2"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/edtPasswordR"
            android:layout_width="321dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/diseno_boton2"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <LinearLayout
            android:layout_width="317dp"
            android:layout_height="79dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="#0055FF"
                android:gravity="clip_horizontal|center"
                android:textColorLink="#74005EFF" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="281dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="No, no quiero ofertas especiales de Netflix por correo" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#EC0000"
            android:text="Continuar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>